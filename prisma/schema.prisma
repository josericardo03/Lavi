generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Equipe {
  id        String    @id @default(cuid()) @db.VarChar(255)
  nome      String    @db.VarChar(255)
  descricao String?
  tipo      String?   @db.VarChar(255)
  email     String?   @db.VarChar(255)
  foto      String?   @db.VarChar(500)
  createdAt DateTime? @default(now()) @db.Timestamp(6)
  updatedAt DateTime? @default(now()) @updatedAt @db.Timestamp(6)

  @@map("equipe")
}

model Galeria {
  id          String    @id @default(cuid()) @db.VarChar(255)
  title       String    @db.VarChar(255)
  descricao   String?
  date        DateTime? @db.Timestamp(6)
  imageUrl    String?   @db.VarChar(500)
  imageAlt    String?   @db.VarChar(255)
  imageWidth  Int?
  imageHeight Int?
  createdAt   DateTime? @default(now()) @db.Timestamp(6)
  updatedAt   DateTime? @default(now()) @updatedAt @db.Timestamp(6)

  @@map("galeria")
}

model Legislacao {
  id        String    @id @default(cuid()) @db.VarChar(255)
  title     String    @db.VarChar(255)
  content   String?
  links     String?
  createdAt DateTime? @default(now()) @db.Timestamp(6)
  updatedAt DateTime? @default(now()) @updatedAt @db.Timestamp(6)

  @@map("legislacao")
}

model Orientacao {
  id        String    @id @default(cuid()) @db.VarChar(255)
  title     String    @db.VarChar(255)
  content   String?
  links     String?
  createdAt DateTime? @default(now()) @db.Timestamp(6)
  updatedAt DateTime? @default(now()) @updatedAt @db.Timestamp(6)

  @@map("orientacao")
}

model Artefatos {
  id        String    @id @default(cuid()) @db.VarChar(255)
  title     String    @db.VarChar(255)
  content   String?
  links     String?
  createdAt DateTime? @default(now()) @db.Timestamp(6)
  updatedAt DateTime? @default(now()) @updatedAt @db.Timestamp(6)

  @@map("artefatos")
}

model Contatos {
  id        String    @id @default(cuid()) @db.VarChar(255)
  nome      String    @db.VarChar(255)
  email     String    @db.VarChar(255)
  assunto   String?   @db.VarChar(255)
  descricao String?
  status    String?   @default("novo") @db.VarChar(100)
  createdAt DateTime? @default(now()) @db.Timestamp(6)

  @@map("contatos")
}

model Usuarios {
  id        String    @id @default(cuid()) @db.VarChar(255)
  nome      String    @db.VarChar(255)
  email     String    @unique @db.VarChar(255)
  senhaHash String    @db.VarChar(255)
  role      String?   @default("admin") @db.VarChar(100)
  ativo     Boolean?  @default(true)
  createdAt DateTime? @default(now()) @db.Timestamp(6)
  updatedAt DateTime? @default(now()) @updatedAt @db.Timestamp(6)

  @@map("usuarios")
}

model Uploads {
  id           String    @id @default(cuid()) @db.VarChar(255)
  nomeOriginal String    @db.VarChar(255)
  nomeArquivo  String    @db.VarChar(255)
  caminho      String    @db.VarChar(500)
  tipo         String?   @db.VarChar(100)
  tamanho      Int?
  mimeType     String?   @db.VarChar(100)
  createdAt    DateTime? @default(now()) @db.Timestamp(6)

  @@map("uploads")
}

model projetos {
  id            String    @id @db.VarChar(255)
  nome          String    @db.VarChar(500)
  nome_completo String?   @db.VarChar(500)
  ano           Int
  descricao     String?
  participantes String?
  status        String?   @default("ativo") @db.VarChar(100)
  imagem        String?   @db.VarChar(500)
  link_externo  String?   @db.VarChar(500)
  created_at    DateTime? @default(now()) @db.Timestamp(6)
  updated_at    DateTime? @default(now()) @db.Timestamp(6)
}

model publicacoes {
  id                String    @id @db.VarChar(255)
  titulo            String    @db.VarChar(500)
  autores           String?
  ano               Int
  revista_periodico String?   @db.VarChar(500)
  doi               String?   @db.VarChar(255)
  link_externo      String?   @db.VarChar(500)
  resumo            String?
  tipo              String?   @default("artigo") @db.VarChar(100)
  created_at        DateTime? @default(now()) @db.Timestamp(6)
  updated_at        DateTime? @default(now()) @db.Timestamp(6)
  imagem            String?   @db.VarChar(500)
}

model sobre {
  id               String    @id @db.VarChar(255)
  titulo           String    @db.VarChar(255)
  descricao        String?
  conteudo         String?
  imagem_principal String?   @db.VarChar(500)
  created_at       DateTime? @default(now()) @db.Timestamp(6)
  updated_at       DateTime? @default(now()) @db.Timestamp(6)
}
